<launch>
    <machine name="host" address="localhost" />

    <node machine="host" pkg="rosserial_python" type="serial_node.py" name="serial_node">
      <param name="port" value="/dev/ttyACM0"/>
    </node>

    <node machine="host" pkg="usb_cam" type="usb_cam_node" name="usb_cam_node">
      <param name="image_width" value="1280"/>
      <param name="framerate" value="30"/>
      <param name="pixel_format" value="mjpeg"/>
    </node>

    <node machine="host" pkg="rc_pid" type="rc_pid_w_spd.py" name="rc_pid">
	    <param name="KP" value="1" type="double"/>
	    <param name="speed_hi" value="78" type="int"/>
	    <param name="speed_low" value="82" type="int"/>
    </node>
        
</launch>
